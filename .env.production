# VoziPOmni - Configuración de Producción
# IMPORTANTE: Este archivo debe ser copiado a .env y configurado con valores reales

# ==========================================
# SEGURIDAD - CAMBIAR TODOS ESTOS VALORES
# ==========================================

# Django - GENERAR UNA CLAVE SECRETA FUERTE
# Puedes generar una con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_50_CHARACTERS_MIN

# Base de datos - CAMBIAR LA CONTRASEÑA
POSTGRES_DB=vozipomni
POSTGRES_USER=vozipomni_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=vozipomni
DB_USER=vozipomni_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_HOST=postgres
DB_PORT=5432

# Redis - CAMBIAR LA CONTRASEÑA
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0

# ==========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==========================================

# Django
DEBUG=False

# Dominios permitidos - Separar con comas
# IMPORTANTE: Agregar tu dominio real aquí
ALLOWED_HOSTS=localhost,127.0.0.1,backend,yourdomain.com,www.yourdomain.com,172.21.207.121

# CORS - Orígenes permitidos
# IMPORTANTE: Configurar con tus dominios reales
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://172.21.207.121
CORS_ALLOW_ALL=False

# ==========================================
# ASTERISK
# ==========================================

ASTERISK_HOST=asterisk
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=admin
ASTERISK_AMI_PASSWORD=CHANGE_THIS_AMI_PASSWORD

# ==========================================
# FRONTEND (NUXT)
# ==========================================

# En producción, usar rutas relativas porque están detrás del mismo nginx
NUXT_PUBLIC_API_BASE=/api
NUXT_PUBLIC_WS_BASE=/ws
NODE_ENV=production

# ==========================================
# EMAIL (Opcional)
# ==========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ==========================================
# BACKUP (Opcional)
# ==========================================

# Configuración para backups automáticos
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
