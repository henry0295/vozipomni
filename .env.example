# VoziPOmni Environment Variables - PRODUCTION

# Django
DEBUG=False
SECRET_KEY=vozipomni-CHANGE-THIS-SECRET-KEY-in-production-2026-SECURE

# Database
DB_NAME=vozipomni_db
DB_USER=vozipomni_user
DB_PASSWORD=vozipomni_pass_2026_CHANGE_THIS
DB_HOST=postgres
DB_PORT=5432

# Redis
REDIS_URL=redis://:vozipomni_redis_2026_CHANGE_THIS@redis:6379/0

# Asterisk
ASTERISK_HOST=asterisk
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=admin
ASTERISK_AMI_PASSWORD=vozipomni_ami_2026_CHANGE_THIS

# Security (IMPORTANTE: Cambiar para producción)
ALLOWED_HOSTS=localhost,127.0.0.1,backend,yourdomain.com

# CORS (IMPORTANTE: Configurar dominios permitidos)
# Separar múltiples orígenes con comas
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_ALL=False

# API - No usado en producción, solo para desarrollo local
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws
VITE_ASTERISK_WS=wss://localhost:8089/ws

# Docker Compose Production
POSTGRES_DB=vozipomni
POSTGRES_USER=vozipomni_user
POSTGRES_PASSWORD=vozipomni_db_2026_CHANGE_THIS
REDIS_PASSWORD=vozipomni_redis_2026_CHANGE_THIS

# Frontend (Nuxt) - Production
# En producción estas variables se configuran en docker-compose.prod.yml
# y usan rutas relativas porque están detrás del mismo nginx
NUXT_PUBLIC_API_BASE=/api
NUXT_PUBLIC_WS_BASE=/ws
